%h3 用户列表
= link_to '新建用户', new_<%=singular_name%>_path 
&nbsp;
= link_to '删除记录', <%=plural_name%>_path + '/delete/all',:method => :delete, :id => 'delete-all-link', :data => {:confirm => '请问您确定要删除这些记录吗？'}
%br
%br
= paginate @<%=plural_name%>

%form#tbl-form
  %table.table.table-hover
    %thead
      %tr
        %th 
          %input{:type=>"checkbox",:id=>"check-all","data-targets" =>"<%=plural_name%>"}
        %th 用户名
        %th 工号
        %th 邮箱
        %th 联系电话
        %th YY
        %th
        %th
    %tbody
    - @<%=plural_name%>.each do |<%=singular_name%>|
      %tr
        %td
          %input{:type => "checkbox", :name => "<%=plural_name%>[]", :value => <%=singular_name%>.id}
        %td= <%=singular_name%>.name
        %td= <%=singular_name%>.emp_no
        %td= <%=singular_name%>.email
        %td= <%=singular_name%>.mobile
        %td= <%=singular_name%>.yy
        %td
          = link_to edit_<%=singular_name%>_path(<%=singular_name%>) do 
            %li.icon-edit{:title => "修改"}
        %td
          = link_to <%=singular_name%>, :method => :delete, :data => {:confirm => '您确定要删除此记录吗？'} do
            %li.icon-trash{:title =>"删除"}

= paginate @<%=plural_name%>

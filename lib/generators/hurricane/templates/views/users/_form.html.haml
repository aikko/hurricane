= form_for @<%=singular_name%>,:html => {:class => "form-horizontal"} do |f|
  = f.hidden_field :uid
  - if @<%=singular_name%>.errors.any?
    #error
      %h2= t('hurricane.alert.fix_and_try',:count => pluralize(@<%=singular_name%>.errors.count,"error"))
      %ul
      - @<%=singular_name%>.errors.full_messages.each do |msg|
        %li = msg

  .control-group
    = f.label :email,t('hurricane.views.users.email'), :class => "control-label"
    .controls
      = f.text_field :email, :placeholder => t('hurricane.views.commons.input_placeholder')
  .control-group
    = f.label :mobile,t('hurricane.views.users.mobile'), :class => "control-label"
    .controls
      = f.text_field :mobile, :placeholder => t('hurricane.views.commons.input_placeholder')
  
<% attributes.each do |attr| -%>
  .control-group
    = f.label :<%=attr.name%>,"<%=attr.name.humanize%>", :class => "control-label"
    .controls
      = f.text_field :<%=attr.name%>, :placeholder => t('hurricane.views.commons.input_placeholder')
<% end -%>
  .control-group
    .controls
      %button{:type => "submit", :class => "btn-primary"}= t("hurricane.btn.submit")
      &nbsp;&nbsp;
      = link_to t("hurricane.btn.back"), :<%=plural_name%>

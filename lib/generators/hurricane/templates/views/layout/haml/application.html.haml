!!! 5
%html
  %head
    %meta{:charset =>"utf-8"}
    %title 珠海游戏联运管理后台
    = stylesheet_link_tag   "application", :media => "all" 
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %button.btn.btn-navbar{:type => "button", "data-toggle" => "collapse","data-target" => ".nav-collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href =>"#"} 珠海游戏联运后台
          .nav-collapse.collapse
            %p.navbar-text.pull-right
              您好，
              = @_current_user.name
              (
              = link_to "登出", "/logout"
              )
            %ul.nav
              %li.active
                = link_to "使用帮助", "/"
    .container-fluid
      .row-fluid
        .span2
          .well.sidebar-nav
            = render :partial => "shared/menu"
        .span10
          - if flash[:alert]
            .alert.alert-error= flash[:alert]
          - if flash[:notice]
            .alert.alert-info= flash[:notice]
          = yield
      %hr
      %footer
        %p &copy; yy.com 2013
  = javascript_include_tag "application"
